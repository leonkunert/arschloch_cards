h1.text-center {{message}}

form(name="registerForm")
    br
    .row
        .small-10.large-8.columns.small-centered.large-centered
            .row.collapse
                .small-4.large-2.columns
                    span.prefix Username
                .small-8.large-10.columns
                    input(type='text', data-ng-model="cookie.playerName", required)
    .row
        .small.large-offset-5.small-offset-5
            a.button(href="#", type='submit', ng-disabled="registerForm.$invalid", ng-click="addPlayer(cookie.playerName)") Let's Go
