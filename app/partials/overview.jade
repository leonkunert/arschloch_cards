.overview
    h1 Arschloch all Tables
    a(href='/add/table') + Add Table
    br
    a(href='/add/player') + Add Player

    // TODO: Hallo durch Del ersetzen
    ul
        li.table(data-ng-repeat='table in tables', data-ng-mouseenter='show.del=true', ng-mouseleave='show.del=false')
            p
                a(href='/table/{{table._id}}') {{table._id}}
                a.ng-hide.TableDel(href='', ng-click="deleteTable()", ng-show="show.del") delete Table
    ul.small-block-grid-2.medium-block-grid-3.large-block-grid-4
        li.player(data-ng-repeat='player in players', data-ng-mouseenter='show.del=true', ng-mouseleave='show.del=false')
            h3 {{player.playerName}}
            p {{player._id}}
            a.ng-hide.PlayerDel(href='', ng-show="show.del") hallo
